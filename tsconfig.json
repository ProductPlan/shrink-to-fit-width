{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "declaration": true,
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "allowSyntheticDefaultImports": true,
    "types": ["cypress", "@testing-library/cypress"]
  },
  "include": ["src", "cypress.d.ts"],
  "exclude": ["node_modules", "dist"]
}
